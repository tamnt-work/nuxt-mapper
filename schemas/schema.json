{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[A-Za-z]+$": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["model"]
        },
        "mappings": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z]+$": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "date", "object"]
                },
                "map": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9_.]+$"
                },
                "required": {
                  "type": "boolean"
                }
              },
              "required": ["type"]
            }
          }
        },
        "relationships": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-zA-Z]+$": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "type": {
                  "type": "string",
                  "pattern": "^[A-Za-z]+(?:\\[\\])?$"
                },
                "map": {
                  "type": "string",
                  "pattern": "^[a-zA-Z0-9_.]+$"
                }
              },
              "required": ["type"]
            }
          }
        }
      }
    }
  }
}